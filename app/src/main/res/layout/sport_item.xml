<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/boxing"
            android:id="@+id/sportImages" android:layout_margin="5dp" android:layout_gravity="center"/>
    <TextView
            android:text="Sport Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sportName" android:textSize="24sp"
            android:gravity="center"/>
</LinearLayout>