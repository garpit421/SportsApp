<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detail_background"
        tools:context=".SportDetailActivity">

    <ImageView
            android:layout_width="145dp"
            android:layout_height="113dp" app:srcCompat="@drawable/boxing" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/detailImage" android:layout_marginTop="33dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:layout_below="@+id/detailImage"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true" android:id="@+id/detailText" android:layout_marginTop="185dp"/>
</RelativeLayout>